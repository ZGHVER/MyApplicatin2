<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              tools:ignore="HardcodedText"
              android:layout_height="match_parent"
              android:background="#4e4a4a"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="150dp"
                android:padding="10dp"
                android:maxLines="4"

                android:background="#beb8b8"
                android:textSize="25sp"
                android:textColor="#000000"
                android:id="@+id/equationView"
                android:layout_weight="1"
                tools:ignore="InefficientWeight"
        />
        <TextView
                android:text=""
                android:maxLines="1"
                android:padding="15dp"

                android:textSize="20sp"
                android:background="#beb8b8"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerView"
        />
    </LinearLayout>     <!-- 显示 -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="ButtonStyle"
            android:layout_height="wrap_content"
    >
        <Button
                android:text="编辑"
                android:id="@+id/Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="testClick"
        />
        <Button
                android:text="A"
                android:onClick="matrixClick"
                android:longClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MatrixA"
                android:layout_weight="1"
        />
        <Button
                android:text="B"
                android:onClick="matrixClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MatrixB"
                android:layout_weight="1"
        />
        <Button
                android:text="C"
                android:onClick="matrixClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MatrixC"
                android:layout_weight="1"
        />
        <Button
                android:text="D"
                android:onClick="matrixClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MatrixD"
                android:layout_weight="1"
        />
        <Button
                android:text="E"
                android:onClick="matrixClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MatrixE"
                android:layout_weight="1"
        />
    </LinearLayout>
    <LinearLayout
            tools:ignore="ButtonStyle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <Button
                android:text="T(A)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="operatorClick"
                android:id="@+id/operateT"
                android:layout_weight="1"
        />
        <Button
                android:text="R(A)"
                android:onClick="operatorClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/operateR"
                android:layout_weight="1"
        />
        <Button
                android:text="V(A)"
                android:onClick="operatorClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/operateV"
                android:layout_weight="1"
        />
        <Button
                android:text="N(A)"
                android:onClick="operatorClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/operateN"
                android:layout_weight="1"
        />
        <Button
                android:text="ans"
                android:onClick="operatorClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ans"
                android:layout_weight="1"
        />
        <Button
                android:text="ce"
                android:onClick="operatorClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear"
                android:layout_weight="1"
        />
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <com.example.zgh.myapplication.myVivew.NumberKeyBoard
                android:layout_width="237dp"
                android:id="@+id/board"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
        >

        </com.example.zgh.myapplication.myVivew.NumberKeyBoard>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_toEndOf="@id/board"
                android:id="@+id/l1"
                android:layout_width="match_parent"
                tools:ignore="ButtonStyle"
                android:layout_height="wrap_content"
        >
            <Button
                    android:text="+"
                    android:onClick="operatorClick"
                    android:id="@+id/operateAdd"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    />
            <Button
                    android:text="("
                    android:onClick="operatorClick"
                    android:id="@+id/Lc"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_toEndOf="@id/board"
                android:id="@+id/l2"
                tools:ignore="ButtonStyle"
                android:layout_below="@id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:text="-"
                    android:onClick="operatorClick"
                    android:id="@+id/operateSub"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
            />
            <Button
                    android:text=")"
                    android:onClick="operatorClick"
                    android:id="@+id/Rc"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_toEndOf="@id/board"
                android:id="@+id/l3"
                tools:ignore="ButtonStyle"
                android:layout_below="@id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:text="*"
                    android:onClick="operatorClick"
                    android:id="@+id/operateMul"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
            />
            <Button
                    android:text="/"
                    android:onClick="operatorClick"
                    android:id="@+id/operateDiv"
                    android:layout_width="73dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_toEndOf="@id/board"
                android:layout_below="@id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >
            <Button
                    android:text="="
                    android:onClick="operatorClick"
                    android:id="@+id/operateEqu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"
            />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>